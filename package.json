{
  "name": "testdriverai",
  "version": "6.0.0",
  "description": "Next generation autonomous AI agent for end-to-end testing of web & desktop",
  "main": "index.js",
  "bin": {
    "testdriverai": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "DEV=true node index.js",
    "debug": "DEV=true VERBOSE=true node index.js",
    "docs": "cd docs && npx mint dev",
    "bundle": "node build.mjs",
    "test": "mocha test/*",
    "docs-lint": "cd docs && vale **/*.mdx",
    "docs-upload": "node upload-docs-to-openai.js",
    "runall": "dotenv testdriverai run --config testdriver.config.yaml --path './testdriver/*.testdriver.yaml'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@electerm/strip-ansi": "^1.0.0",
    "ajv": "^8.17.1",
    "arktype": "^2.1.19",
    "axios": "^1.7.7",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "datadog-winston": "^1.6.0",
    "dotenv": "^16.4.5",
    "jimp": "^0.22.12",
    "js-yaml": "^4.1.0",
    "markdown-parser": "0.0.8",
    "marked": "^15.0.12",
    "marked-terminal": "^7.0.0",
    "marky": "^1.2.5",
    "node-ipc": "^12.0.0",
    "node-notifier": "^10.0.1",
    "odiff-bin": "^3.1.2",
    "open": "^10.1.2",
    "prompts": "^2.4.2",
    "remark-parse": "^11.0.0",
    "sanitize-filename": "^1.6.3",
    "say": "^0.16.0",
    "semver": "^7.6.2",
    "tmp": "^0.2.3",
    "uuid": "^10.0.0",
    "winston": "^3.13.0",
    "winston-transport": "^4.9.0",
    "ws": "^8.18.1"
  },
  "overrides": {
    "glob": "^11.0.1",
    "rimraf": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "chai": "^5.1.2",
    "esbuild": "0.20.2",
    "esbuild-plugin-fileloc": "^0.0.6",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "mocha": "^10.8.2",
    "node-addon-api": "^8.0.0",
    "prettier": "3.3.3"
